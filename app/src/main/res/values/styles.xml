<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- colorPrimary is the background colour of myMessages and ActionBar -->
        <item name="colorPrimary">#00A86B</item>

        <!-- colorSecondary is the background colour of npcMessages-->
<!--        <item name="android:colorSecondary">#93FF70</item>-->

        <!-- colorPrimaryDark is the colour of notification bar -->
        <item name="colorPrimaryDark">#014421</item>

        <!-- colorAccent is the colour of option selectors and cursor-->
<!--        <item name="colorAccent">#013220</item>-->
        <item name="colorAccent">#93FF70</item>

        <!-- colorOnBackground is the colour of the background, not ActionBar> -->
<!--        <item name="android:colorBackground">#FFFFFF</item>-->
    </style>

    <!-- Night Mode Colours -->
    <style name="purple">
        <item name="colorPrimary">#3C1361</item>
<!--        <item name="colorSecondary">#B19CD9</item>-->
        <item name="colorPrimaryDark">#301934</item>
        <item name="colorAccent">#152238</item>
        <item name="android:colorBackground">#22303C</item>
        <item name="android:textColor">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="colorBackgroundFloating">#191B43</item>
    </style>

    <style name="NPCTextBody">
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
    </style>

    <style name="MyTextBody">
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
    </style>

    <style name="NameSetterDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>